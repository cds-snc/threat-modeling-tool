{
	"image": "mcr.microsoft.com/devcontainers/javascript-node",
	"extensions": [
		"redhat.vscode-yaml",
		"timonwong.shellcheck",
		"github.copilot"
	],
	"features": {
		"ghcr.io/lukewiwa/features/shellcheck:0": {
			"version": "stable"
		}
	},
	"containerEnv": {
		"SHELL": "/bin/zsh"
	},
	"postCreateCommand": "npm i && npm run build"
}