{
	"image": "mcr.microsoft.com/devcontainers/javascript-node",
	"extensions": [
		"redhat.vscode-yaml",
		"timonwong.shellcheck",
		"github.copilot"
	],
	"features": {
		"ghcr.io/lukewiwa/features/shellcheck:0": {
			"version": "stable"
		},
		"ghcr.io/devcontainers/features/terraform:1": {
			"version": "latest",
			"tflint": "latest",
			"terragrunt": "latest"
		}
	},
	"containerEnv": {
		"SHELL": "/bin/zsh"
	},
	"postCreateCommand": "yarn install && yarn build"
}